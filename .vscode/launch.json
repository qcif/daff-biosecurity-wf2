{
    "configurations": [
        {
            "name": "Unit tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s", "tests",
                "-p", "test*.py",
                "-b"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "BLAST Parser",
            "program": "${workspaceFolder}/scripts/p1_parse_blast.py",
            "args": [
                "tests/test-data/output.xml",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Assign taxonomy",
            "program": "${workspaceFolder}/scripts/p3_assign_taxonomy.py",
            "args": [
                "output/query_1",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "GBIF species fetch",
            "program": "${workspaceFolder}/scripts/gbif/fetch_related_species.py",
            "args": [
                "Cheiloxena aitori",
                "--country", "AU",
                "--output", "output/relatives.json"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Workflow report",
            "module": "report.report",
            "cwd": "${workspaceFolder}/scripts",
            "env": {
                "OUTPUT_DIR": "../output"
            }
        }
    ]
}
