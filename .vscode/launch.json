{
    "configurations": [
        {
            "name": "Unit tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s", "tests",
                "-p", "test*.py",
                "-b"
            ],
            "env": {
                "GENBANK_CONCURRENCY_TEST": "0"
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P1 BLAST Parser",
            "program": "${workspaceFolder}/scripts/p1_parse_blast.py",
            "args": [
                "tests/test-data/output.xml",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P3 Assign taxonomy",
            "program": "${workspaceFolder}/scripts/p3_assign_taxonomy.py",
            "args": [
                "output/query_001_LC438549.1"
            ],
            "env": {
                "INPUT_TOI_FILEPATH": "tests/test-data/taxa_of_interest.txt",
            }
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Genbank",
            "module": "entrez.genbank",
            "cwd": "${workspaceFolder}/scripts"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "GBIF species fetch",
            "program": "${workspaceFolder}/scripts/gbif/fetch_related_species.py",
            "args": [
                "Cheiloxena aitori",
                "--country", "AU",
                "--output", "output/relatives.json"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Workflow report",
            "module": "report.report",
            "cwd": "${workspaceFolder}/scripts",
            "env": {
                "OUTPUT_DIR": "../output",
                "INPUT_FASTA_FILEPATH": "../tests/test-data/query.fasta",
            }
        }
    ]
}
