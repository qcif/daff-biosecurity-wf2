{
    "configurations": [
        {
            "type": "debugpy",
            "request": "launch",
            "name": "BLAST Parser",
            "program": "${workspaceFolder}/blast/parse.py",
            "cwd": "${workspaceFolder}/blast",
            "args": [
                "output.xml",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "GBIF species fetch",
            "program": "${workspaceFolder}/gbif/fetch_related_species.py",
            "cwd": "${workspaceFolder}/gbif",
            "args": [
                "Cheiloxena aitori",
                "--country", "AU",
                "--output", "output/relatives.json"
            ]
        },
        {
            "name": "Unit tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s", "tests",
                "-p", "test*.py",
                "-b"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ]
}
