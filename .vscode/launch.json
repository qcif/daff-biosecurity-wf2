{
    "configurations": [
        {
            "name": "Unit tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s", "tests",
                "-p", "test*.py",
                // "-p", "test_taxonkit.py",
                "-b",
            ],
            "env": {
                "GENBANK_CONCURRENCY_TEST": "0",  // High network traffic
                "PYTHONPATH": "${workspaceFolder}/scripts",
            },
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P1 BLAST Parser",
            "program": "${workspaceFolder}/scripts/p1_parse_blast.py",
            "args": [
                "tests/test-data/output.xml",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P2 Extract taxonomy",
            "program": "${workspaceFolder}/scripts/p2_extract_taxonomy.py",
            "args": [
                "output/taxids.csv",
                "--output_dir", "output",
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P3 Assign taxonomy",
            "program": "${workspaceFolder}/scripts/p3_assign_taxonomy.py",
            "args": [
                "output/query_001_LC438549"
            ],
            "env": {
                "INPUT_TOI_FILEPATH": "tests/test-data/taxa_of_interest.txt",
            }
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P4 Source diversity",
            "program": "${workspaceFolder}/scripts/p4_source_diversity.py",
            "args": [
                "output/query_001_LC438549"
            ]
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "P5 DB coverage",
            "program": "${workspaceFolder}/scripts/p5_db_coverage.py",
            "args": [
                "output/query_001_LC438549"
            ],
            "env": {
                "LOGGING_DEBUG": "1",
            }
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Genbank",
            "module": "entrez.genbank",
            "cwd": "${workspaceFolder}/scripts"
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "GBIF related species",
            "program": "${workspaceFolder}/scripts/src/gbif/relatives.py",
        },
        {
            "type": "debugpy",
            "request": "launch",
            "name": "Workflow report",
            "module": "src.report.report",
            "cwd": "${workspaceFolder}/scripts",
            "env": {
                "OUTPUT_DIR": "../output",
                "INPUT_FASTA_FILEPATH": "../tests/test-data/query.fasta",
            }
        }
    ]
}
